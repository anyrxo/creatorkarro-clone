{
  "version": 2,
  "framework": "nextjs",
  "installCommand": "npm install",
  "buildCommand": "next build",
  "cleanUrls": true,
  "trailingSlash": true,
  "functions": {
    "src/app/blog/[slug]/page.tsx": {
      "maxDuration": 30
    },
    "src/app/api/**": {
      "maxDuration": 60
    },
    "src/app/fx-calc/page.tsx": {
      "maxDuration": 30
    }
  },
  "build": {
    "env": {
      "VERCEL_FORCE_NO_BUILD_CACHE": "1",
      "NODE_OPTIONS": "--max-old-space-size=8192"
    }
  },
  "headers": [
    {
      "source": "/blog/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=86400"
        }
      ]
    },
    {
      "source": "/fx-calc",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=600"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=300, s-maxage=600"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt", 
      "destination": "/api/robots"
    }
  ]
}# FORCE DEPLOYMENT Sat  6 Sep 2025 02:58:57 AEST
